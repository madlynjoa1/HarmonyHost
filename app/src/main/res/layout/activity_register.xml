<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/plainbackground_harmony"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:gravity="center"

            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_regular"

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/usernameETRegister"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:hint="Username"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/phoneET"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginLeft="13dp"
                android:hint="Phone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/firstNameRegisterET"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:hint="First Name"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/lastNameRegisterET"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginLeft="13dp"
                android:hint="Last Name"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/dateOfBirthRegisterET"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:hint="Date of Birth"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/emailRegisterET"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginLeft="13dp"
            android:hint="Email"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/passwordETRegisterET"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:hint="Password"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/confirmPasswordRegisterET"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginLeft="13dp"
                android:hint="Confirm Password"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRegB"
                android:layout_width="161dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/grey"
                android:paddingBottom="5dp"
                android:text="Register"
                android:textSize="30sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:textStyle="bold"
                android:text="Already Register?"/>
            <TextView
                android:id="@+id/loginTVRegAct"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/lightPink"
                android:textSize="27sp"
                android:textStyle="bold"
                android:text=" Login"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</ScrollView>